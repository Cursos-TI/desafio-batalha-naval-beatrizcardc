// Desafio Batalha Naval - Nível Novato
// Autor: [Seu Nome]
// Objetivo: Posicionar dois navios (um vertical e um horizontal) e exibir as coordenadas

#include <stdio.h>

int main() {
    // Tabuleiro 5x5 (por simplicidade para o Nível Novato)
    int tabuleiro[5][5] = {0};

    // Coordenadas iniciais dos navios
    int x1 = 0, y1 = 2; // Navio horizontal
    int x2 = 1, y2 = 0; // Navio vertical

    // Posiciona navio horizontal de tamanho 3
    for (int i = 0; i < 3; i++) {
        tabuleiro[x1][y1 + i] = 1;
    }

    // Posiciona navio vertical de tamanho 3
    for (int i = 0; i < 3; i++) {
        tabuleiro[x2 + i][y2] = 2;
    }

    // Exibe as coordenadas ocupadas por cada navio
    printf("\nCoordenadas do navio horizontal (valor 1):\n");
    for (int i = 0; i < 5; i++) {
        for (int j = 0; j < 5; j++) {
            if (tabuleiro[i][j] == 1) {
                printf("(%d, %d)\n", i, j);
            }
        }
    }

    printf("\nCoordenadas do navio vertical (valor 2):\n");
    for (int i = 0; i < 5; i++) {
        for (int j = 0; j < 5; j++) {
            if (tabuleiro[i][j] == 2) {
                printf("(%d, %d)\n", i, j);
            }
        }
    }

    return 0;
}
